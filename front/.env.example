VITE_APP_BASE_URL=https://comforttest.rbiz.cc
VITE_API_BASE_URL=https://comforttest.rbiz.cc/v1
VITE_API_TIMEOUT_MS=25000

VITE_AUTH_TOKEN_NAME=auth_token_bizsys
VITE_AUTH_TOKEN_TTL_DAYS=20

VITE_APP_DEBUG=false

# Horário de Funcionamento
VITE_BUSINESS_HOURS_ENABLED=false
VITE_BUSINESS_HOURS_START=09:00
VITE_BUSINESS_HOURS_END=19:00
VITE_BUSINESS_HOURS_TIMEZONE=America/Sao_Paulo

# Validação de CPF
VITE_ENABLE_CPF_VALIDATION=true

# Redirecionamento para fila após cadastro
VITE_QUEUE_REDIRECT_DELAY_MS=3500

# Modo Promotor (desabilita redirect para fila, entre outros)
VITE_ENABLE_PROMOTOR_MODE=true

# Coordenadas fixas (se definidas, desabilita geolocalização real do navegador)
VITE_FIXED_LATITUDE=-23.528323947148408
VITE_FIXED_LONGITUDE=-46.73593371307667

# URL externa dos Termos de Autorização (exibida via QR Code no modo promotor)
VITE_TERMS_URL=https://comfort.rbiz.cc/termos